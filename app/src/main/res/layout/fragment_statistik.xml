<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Statistik">

    <!-- TODO: Update blank fragment layout -->
    <!-- top section -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/top_bar2_d"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#313c82"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <!-- mid section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="7dp">
            <!-- Pilih bulan -->
            <Spinner
                android:id="@+id/spinner_stat_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Munculkan grafik -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Informasi bulan dan tahun -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Bulan : " />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/stat_MM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="bln"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/stat_YY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="yyyy"/>
            </LinearLayout>

            <!-- informasi detil -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/income_t" />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/stat_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp. 00.000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/outcome_t" />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/stat_outcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp. 00.000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/loan_t" />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/stat_loan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp. 00.000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/claim_t" />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/stat_claim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp. 00.000"/>
            </LinearLayout>



            <!-- grafik yang setengah lingkaran -->


        </LinearLayout>


    </ScrollView>



</LinearLayout>